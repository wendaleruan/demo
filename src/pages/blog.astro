---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');

const pageTitle = "Blog";
const urlName = "Blog";
const seconedTitle = "This is the seconedTitle for blog page!";
---

<BaseLayout pageTitle={pageTitle} urlName={urlName} seconedTitle={seconedTitle}>
    <div class="blogitem_wrapper">
        {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} author={post.frontmatter.author} image={post.frontmatter.image.url}/>)}
    </div>
</BaseLayout>
        

      