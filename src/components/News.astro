---
const allPosts = await Astro.glob('../pages/posts/*.md');
import BlogPost from "./BlogPost.astro";
---
<div class="section news_section">
    <div class="container">
        <div class="news_upper_content">
            <div class="news_content">
                <div class="textoverlap_container">
                    <h2 class="h2 textoverlap_title">博客文章</h2>
                    <h1 class="hero textoverlap_text">博客文章</h1>
                </div>
            </div>
            <a class="button-small news_button" href="/blog">查看全部</a>
        </div>
        <div class="news_wrapper">
            {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} author={post.frontmatter.author} image={post.frontmatter.image.url}/>)}
        </div>
    </div>
</div>
